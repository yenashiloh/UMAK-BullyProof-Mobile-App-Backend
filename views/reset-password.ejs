<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #e0e7ff, #f3e8ff);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            padding: 20px;
        }

        .container {
            background: #ffffff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            position: relative;
            overflow: hidden;
        }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #1E3A8A, #6B7280);
        }

        h1 {
            color: #1E3A8A;
            font-size: 28px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
            color: #6B7280;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #1E3A8A;
            margin-bottom: 8px;
        }

        input[type="password"] {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            color: #374151;
            box-sizing: border-box;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        input[type="password"]:focus {
            outline: none;
            border-color: #1E3A8A;
            box-shadow: 0 0 0 3px rgba(30, 58, 138, 0.2);
        }

        .submit-btn {
            display: flex;
            justify-content: center;
            margin-top: 30px;
            transition: opacity 0.3s ease;
        }

        .submit-btn.hidden {
            opacity: 0;
            height: 0;
            margin: 0;
            overflow: hidden;
        }

        button {
            padding: 12px 24px;
            background: linear-gradient(90deg, #1E3A8A, #3B82F6);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            box-shadow: 0 4px 12px rgba(30, 58, 138, 0.3);
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(30, 58, 138, 0.4);
        }

        button:active {
            transform: translateY(0);
            box-shadow: 0 2px 8px rgba(30, 58, 138, 0.2);
        }

        .message {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            font-weight: 500;
        }

        .error {
            color: #ef4444;
        }

        .success {
            color: #10b981;
        }

        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .spinner {
            width: 24px;
            height: 24px;
            border: 3px solid #1E3A8A;
            border-top: 3px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Reset Your Password</h1>
        <p>Create a new secure password for your account.</p>
        <form id="resetPasswordForm" method="POST" action="/reset-password/<%= userId %>">
            <input type="hidden" name="token" value="<%= token %>">
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="password" placeholder="Enter new password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password"
                    required>
            </div>
            <div class="submit-btn" id="submitBtnContainer">
                <button type="submit" id="submitBtn">Reset Password</button>
            </div>
            <div id="message" class="message"></div>
        </form>
    </div>

    <script>
        document.getElementById('resetPasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const messageDiv = document.getElementById('message');
            const submitBtn = document.getElementById('submitBtn');
            const submitBtnContainer = document.getElementById('submitBtnContainer');

            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{8,}$/;

            if (newPassword !== confirmPassword) {
                messageDiv.innerHTML = '<p class="error">Passwords do not match</p>';
                return;
            }

            if (!passwordRegex.test(newPassword)) {
                messageDiv.innerHTML = '<p class="error">Password must be at least 8 characters long and include one uppercase letter, one lowercase letter, one number, and one special character (!@#$%^&*)</p>';
                return;
            }

            // Show loading spinner
            submitBtn.disabled = true;
            submitBtn.innerHTML = 'Resetting...';
            messageDiv.innerHTML = '<div class="loading"><div class="spinner"></div></div>';

            try {
                const response = await fetch(`/reset-password/${encodeURIComponent('<%= userId %>')}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `token=<%= token %>&password=${encodeURIComponent(newPassword)}`
                });

                const data = await response.text();
                if (data.includes('success')) {
                    messageDiv.innerHTML = '<p class="success">Password reset successfully!</p>';
                    submitBtnContainer.classList.add('hidden'); // Hide the button container
                } else {
                    messageDiv.innerHTML = data;
                }
            } catch (error) {
                messageDiv.innerHTML = '<p class="error">An error occurred. Please try again later.</p>';
            } finally {
                if (!submitBtnContainer.classList.contains('hidden')) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'Reset Password';
                }
            }
        });
    </script>
</body>

</html>